{
  "include": [
    "tests/*.ts",
    "src/calculator.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "strict": true,
    "outDir": "./build",
    "rootDir": "./",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "lib": ["ES2020"],
    "skipLibCheck": true
  }
}